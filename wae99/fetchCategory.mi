<%class>
	has 'category_id' => (required => 1);
</%class>

<% $categories[0]->{'title'} %>

<%init>
	my $dbh = Ws24::DBI->dbh();
	my $sth = $dbh->prepare("SELECT title from group99_category WHERE category_id=?");
	$sth->execute($.category_id);
  my @categories;
  while (my $hr = $sth->fetchrow_hashref) {
    push(@categories, $hr);
  }
</%init>
